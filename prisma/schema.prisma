// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  teacher
  student
  guest
}

enum LessonStatus {
  scheduled
  completed
  cancelled
}

enum HomeworkStatus {
  assigned
  submitted
  graded
}

enum PaymentStatus {
  pending
  paid
  overdue
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      UserRole @default(student)
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  student        Student?
  lessons        Lesson[]         @relation("TeacherLessons")
  materials      Material[]
  ogeTests       OGETest[]        @relation("TeacherOGETests")
  contactForms   ContactForm[]

  @@map("users")
}

model Student {
  id         String   @id @default(cuid())
  userId     String   @unique
  phone      String?
  telegram   String?
  parentName String?
  parentPhone String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user    User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  lessons Lesson[]
  homework Homework[]
  payments Payment[]
  ogeTests OGETest[]
  materials Material[]

  @@map("students")
}

model Lesson {
  id        String       @id @default(cuid())
  teacherId String
  studentId String
  startTime DateTime
  endTime   DateTime
  status    LessonStatus @default(scheduled)
  notes     String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  teacher User    @relation("TeacherLessons", fields: [teacherId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  homework Homework[]

  @@map("lessons")
}

model Homework {
  id          String         @id @default(cuid())
  lessonId    String?
  studentId   String
  title       String
  description String?
  filePath    String?
  status      HomeworkStatus @default(assigned)
  dueDate     DateTime?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  lesson      Lesson?             @relation(fields: [lessonId], references: [id], onDelete: SetNull)
  student     Student             @relation(fields: [studentId], references: [id], onDelete: Cascade)
  submissions HomeworkSubmission[]

  @@map("homework")
}

model HomeworkSubmission {
  id         String   @id @default(cuid())
  homeworkId String
  filePath   String
  submittedAt DateTime @default(now())
  grade      Int?
  feedback   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  homework Homework @relation(fields: [homeworkId], references: [id], onDelete: Cascade)

  @@map("homework_submissions")
}

model Material {
  id          String   @id @default(cuid())
  teacherId   String
  studentId   String?
  title       String
  description String?
  filePath    String
  type        String?
  isOGE       Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  teacher User    @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  student Student? @relation(fields: [studentId], references: [id], onDelete: SetNull)

  @@map("materials")
}

model OGETest {
  id       String   @id @default(cuid())
  studentId String
  teacherId String
  testDate DateTime
  score    Int
  maxScore Int      @default(100)
  results  String?  // JSON string with detailed results
  notes    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  teacher User @relation("TeacherOGETests", fields: [teacherId], references: [id], onDelete: Cascade)

  @@map("oge_tests")
}

model Payment {
  id       String        @id @default(cuid())
  studentId String
  amount   Float
  status   PaymentStatus @default(pending)
  dueDate  DateTime
  paidAt   DateTime?
  notes    String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@map("payments")
}

model ContactForm {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    String?

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("contact_forms")
}

